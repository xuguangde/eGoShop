page {
  background: #f6f6f6;
}
.title,.opt,.goods,.goodsPrice,.goodsBottom,.goodsCart,.goodsAdd,.contenrOne,.footerOne,.hejiOne,.footerPrice,.heji{
  display: flex;
  align-items: center;
}
.cartContent {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 127rpx;
}
.footerOne {
  height: 100%;
  padding: 0 30rpx;
  justify-content: space-between;
}
.hejiText {
  font-size: 30rpx;
  color: #333333;
}
.footerPrice view:nth-child(1){
  font-size: 30rpx;
}
.footerPrice view:nth-child(2){
  font-size: 36rpx;
}
.goShopping {
  height: 88rpx;
  width: 230rpx;
  color: #ffffff;
  background: linear-gradient(to right, #fc594e 0%,#ed443a 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 88rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 20rpx;
}
.cart {
  background: #ffffff;
  width: 710rpx;
  margin-top: 20rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  height: 107rpx;
  width: 100%;
  background: #ffffff;
}
.ctrl {
  font-size: 26rpx;
  color: #999;
}
.contenrOne {
  display: flex;
}
.goodsImg image {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.opt image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}
.goodsName {
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 100%;
}
.title,.goods{
  padding-top: 15rpx;
  padding-left: 8rpx;
  padding-right: 14rpx;
  padding-bottom: 34rpx;
}
.goodsAdd {
  width: 49rpx;
  height: 48rpx;
  border: 1rpx #f1f1f1 solid;
  justify-content: center;
  border-radius: 6rpx;
}
.goodsNum {
  font-size: 26rpx;
  color: #333333;
  width: 68rpx;
  text-align: center;
}
.qian {
  font-size: 24rpx;
}
.goodsPriceText {
  font-size: 30rpx;
}
.goodsCart {
  justify-content: space-between;
}
.goodsAdd image {
  width: 20rpx;
  height: 20rpx;
}
.goodsDelete image {
  width: 44rpx;
  height: 44rpx;
}
.goodsRightTop {
  display: flex;
  align-items: center;
}
.goodsRight {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  width: 100%;
}
.goodsSpecs {
  font-size: 24rpx;
  color: #999;
}
.shopName {
  font-size: 26rpx;
  color: #333333;
}