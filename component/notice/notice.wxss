.notification_bar {
  top: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 50rpx;
  overflow: hidden;
  background: #fff;
}

.bar_left {
  width: 27rpx;
  height: 25rpx;
}

.gong {
  font-style: italic;
  font-size: 35rpx;
  font-weight: bold;
  color: #333333;
}

.gao {
  font-style: italic;
  font-size: 35rpx;
  font-weight: 700;
  color: #e42683;
  border-right: 2rpx solid #f8dad8;
  padding-right: 30rpx;
  margin-right: 20rpx;
}

.bar_text {
  margin-left: 12rpx;
  font-size: 20rpx;
  color: #333333;
}